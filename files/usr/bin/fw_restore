#!/bin/sh
rm -rf /root/restore/*
adb -s ce031713f47698730c pull -p /storage/emulated/0/OPENWRT/aldev_backup.tar.gz /root
logger "file restore suskses di download"
echo "file restore suskses di download"
mkdir -p /root/restore
tar -xf *.tar.gz -C /root/restore
cp -r /root/restore/root/* /root/
logger "restore folder root complete"
echo "restore folder root complete"
/etc/init.d/vnstat restart
/www/netmon/vnstati.sh

cp -r /root/restore/etc/config/openclash /etc/config/
cp -r /root/restore/etc/openclash/* /etc/openclash/
chmod +x /etc/openclash/core/*

logger "restore config openclash complete"
echo "restore config complete"
sleep 2
uci set openclash.config.enable=1
uci commit openclash
/etc/init.d/openclash start
#sleep 2
#uci set AdGuardHome.AdGuardHome.enabled='1'
#uci commit AdGuardHome
#/etc/init.d/AdGuardHome start

chmod +x /root/TgBotWRT/*
chmod +x /root/TgBotWRT/TOOLS/*
service edy restart